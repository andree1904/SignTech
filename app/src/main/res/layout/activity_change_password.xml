<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Change_Password">

    <EditText
        android:id="@+id/etCurrentPass"
        android:layout_width="274dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custom_input"

        android:ems="10"
        android:hint="Enter old password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etNewPass"
        android:layout_width="274dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_input"

        android:ems="10"
        android:hint="Enter new password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/etCurrentPass"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/etCurrentPass"
        app:layout_constraintTop_toBottomOf="@+id/etCurrentPass" />

    <EditText
        android:id="@+id/etConfirmNewPass"
        android:layout_width="274dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custom_input"

        android:ems="10"
        android:hint="Enter confirm new password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/etNewPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etNewPass"
        app:layout_constraintTop_toBottomOf="@+id/etNewPass" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Change Password"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Enter"
        app:backgroundTint="#203239"
        app:layout_constraintEnd_toEndOf="@+id/etConfirmNewPass"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/etConfirmNewPass"
        app:layout_constraintTop_toBottomOf="@+id/etConfirmNewPass" />
</androidx.constraintlayout.widget.ConstraintLayout>