<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterDone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="-285dp"
            android:src="@drawable/circle"/>

        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-60dp"
            android:src="@drawable/successful_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/helvetica"
            android:text="Let's go!"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/helvetica_regular"
            android:text="You are now successfully signed up! Whether you are a beginner or an expert, you'll surely love this app."
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnLoginPage"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/helvetica"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>